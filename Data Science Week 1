
# Homework Problem 1
def count_vowels(word):
    vowels = "aeiouAEIOU"
    count = 0
    for char in word:
        if char in vowels:
            count += 1
    return count



# Homework Problem 2
animals = ['tiger', 'elephant', 'monkey', 'zebra', 'panther']
for animal in animals:
    print(animal.upper())



# Homework Problem 3
for i in range(1, 21):
    if i % 2 == 0:
        print(f"{i} is even.")
    else:
        print(f"{i} is odd.")




# Homework Problem 4
def sum_of_integers(a, b):
    return a + b
